- if controller_name != 'sessions'
  %div= link_to t('devise.shared.links.sign_in'), new_session_path(resource_name)

- if devise_mapping.registerable? && controller_name != 'registrations'
  %div= link_to t('devise.shared.links.sign_up'), new_registration_path(resource_name)

- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  %div= link_to t('devise.shared.links.forgot_your_password'), new_password_path(resource_name)

- if devise_mapping.confirmable? && controller_name != 'confirmations'
  %div= link_to t('devise.shared.links.didn_t_receive_confirmation_instructions'), new_user_confirmation_path
