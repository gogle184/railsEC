.row.justify-content-center
  .col-6
    .card.card-body
      .fs-4.mb-3= t('devise.passwords.edit.change_your_password')
      = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        .form-inputs
          = f.input :reset_password_token, as: :hidden
          = f.full_error :reset_password_token
          = f.input :password,
                    label: t('devise.passwords.edit.new_password'),
                    autofocus: true,
                    hint: ("#{@minimum_password_length} 文字以上" if @minimum_password_length),
                    input_html: { autocomplete: 'new-password' }
          = f.input :password_confirmation,
                    label: t('devise.passwords.edit.confirm_new_password'),
                    input_html: { autocomplete: 'new-password' }
        .form-actions.mb-3
          = f.button :submit, t('devise.passwords.edit.change_my_password'), class: 'btn btn-primary'
        = render 'users/shared/links'
