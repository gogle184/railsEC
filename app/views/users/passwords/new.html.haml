.row.justify-content-center
  .col-6
    .card.card-body
      .fs-4.mb-3= t('devise.passwords.new.forgot_your_password')
      = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        .form-inputs
          = f.input :email,
                    autofocus: true,
                    input_html: { autocomplete: 'email' }
        .form-actions.mb-3
          = f.button :submit, t('devise.passwords.new.send_me_reset_password_instructions'), class: 'btn btn-primary'
        = render 'users/shared/links'
