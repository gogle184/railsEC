.container
  %h1.mt-2= t('user.index.title')
  .row.justify-content-center
    .col-10
      .table-responsive
        %table.table.text-center
          %thead
            %tr
              %th= User.human_attribute_name(:email)
              %th= User.human_attribute_name(:display_name)
              %th= User.human_attribute_name(:name)
              %th
              %th
          %tbody
            - @users.each do |user|
              %tr
                %td= user.email
                %td= user.display_name
                %td= user.name
                %td
                  = link_to t('common.view.action.show'), admins_user_path(user), class: 'btn btn-primary'
                %td= button_to t('common.view.action.destroy'), admins_user_path(user), method: :delete,
                                                                                        data: { turbo_confirm: t('common.view.action.confirm_delete') },
                                                                                        class: 'btn btn-danger'
